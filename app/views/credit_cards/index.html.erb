<h1>Listing Credit Cards</h1>

<table border="1", width="50%">
  <thead>
    <tr>
      <th>Digits</th>
      <th>Month</th>
      <th>Year</th>
      <th>CVC</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @credit_cards.each do |credit_card| %>
      <tr>
        <td><%= credit_card.digits %></td>
        <td><%= credit_card.month %></td>
        <td><%= credit_card.year %></td>
        <td><%= credit_card.cvc %></td>
        <td><%= credit_card.user.email %></td>
        <td><%= link_to 'Show', credit_card %></td>
        <td><%= link_to 'Edit', edit_credit_card_path(credit_card) %></td>
        <td><%= link_to 'Destroy', credit_card, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% unless current_user.credit_cards.present? %>
  <%= link_to 'New Credit card', new_credit_card_path %>
<% end %>

<br>
<%= link_to 'Back', root_path %>
